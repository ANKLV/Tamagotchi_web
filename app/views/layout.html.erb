<!doctype html>
<html>
    <head>
        <script>
            if (!window.location.href.endsWith('/')){
                window.location = '/'
            }
        </script>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class='row'>
            <div class='col-sm-2'></div>
            <div class='col-sm-8' style='text-align:center'>             
                <div class='btn-info'>
                    <% if @pet.is_a? Panda %>
                        <h1 class='btn-warning'> Hi I`m you`r panda</h1>
                        <p><img width='300px'src='https://image.freepik.com/free-vector/cute-panda-cartoon_33070-2514.jpg'/></p>
                    <% else %>
                        <h1 class='btn-success'> Hi I`m you`r tiger</h1>
                        <p><img width='300px'src='http://clipartsign.com/upload/2016/02/18/cute-baby-tiger-drawings-clip-art.jpg'/></p>          
                    <% end %>
                   
                        <p>My name is<b> <%= @pet.name %></b></p>                    
                        <p>My life-states are: <%= @pet.states.join(", ") %></p>
                        <p>I have <%= @pet.lives %> lives</p>
                        <p><b> <%= @pet.response.join("<br>") %></b></p>
                        <p style="font-size: 4em"><%= @pet.img %></p>
                </div>
                <div class='as'>
                    <a class='btn btn-success' href="/feed"> Feed </a>
                    <a class='btn btn-primary' href="/water"> Water </a>
                    <a class='btn btn-warning' href="/sleep"> Sleep </a>
                    <a class='btn btn-danger' href="/wake"> Wake </a>
                    <a class='btn btn-success' href="/toilet"> Toilet </a>
                    <a class='btn btn-primary' href="/observe"> Observe </a>
                    <a class='btn btn-danger' href="/play"> Play </a>
                </div>   
            </div>
            <div class='col-sm-2'></div>  
        </div>       
    </body>
<html>